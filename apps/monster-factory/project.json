{
  "projectType": "application",
  "root": "apps/monster-factory",
  "sourceRoot": "apps/monster-factory/src",
  "prefix": "opneforge",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/monster-factory",
        "index": "apps/monster-factory/src/index.html",
        "main": "apps/monster-factory/src/main.ts",
        "polyfills": "apps/monster-factory/src/polyfills.ts",
        "tsConfig": "apps/monster-factory/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/monster-factory/src/assets",
          {
            "glob": "**/*.svg",
            "input": "node_modules/ionicons/dist/ionicons/svg",
            "output": "./svg"
          }
        ],
        "styles": [
          "apps/monster-factory/src/global.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "3mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/monster-factory/src/environments/environment.ts",
              "with": "apps/monster-factory/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "monster-factory:build:production"
        },
        "development": {
          "browserTarget": "monster-factory:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "monster-factory:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/monster-factory/src/**/*.ts",
          "apps/monster-factory/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/monster-factory"
      ],
      "options": {
        "jestConfig": "apps/monster-factory/jest.config.js",
        "passWithNoTests": true
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/monster-factory/**/*.css",
          "apps/monster-factory/**/*.scss"
        ]
      }
    }
  },
  "tags": []
}
